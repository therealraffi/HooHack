<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#153D6D"/>
            <corners android:radius="20dp"/>
            <padding android:bottom="60sp"
                android:top="-40sp"
                android:left="10sp"
                android:right="10dp"
                />
            <size
                android:width="100dp"
                android:height="50dp"/>

            <stroke android:width="1dp"
                android:color="#1D4572"/>

        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="#E6DA82"/>
            <padding android:top="5dp"
                android:bottom="12dp"
                android:right="8dp"
                android:left="8dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="#850000"
                android:endColor="#CE6464"
                android:angle="45"/>/>
            <padding android:top="45dp"
                android:bottom="-55dp"
                android:right="80dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#7FB6F3"/>
            <stroke android:color="#6581D6"
                android:width="1dp"/>
            <size
                android:width="10dp"/>
            <padding android:right="-70dp"
                android:left="70dp"/>
        </shape>

    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#7FB6F3"/>
            <stroke android:color="#6581D6"
                android:width="1dp"/>
            <size
                android:width="10dp"/>
        </shape>

    </item>
</layer-list>

